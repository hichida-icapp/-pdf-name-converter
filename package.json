{
  "name": "pdf-name-converter",
  "version": "0.1.0",
  "main": "app/main.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development electron .\"",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.example.pdfnameconverter",
    "files": [
      "app/**/*",
      "lib/**/*",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "assets/fonts",
        "to": "fonts"
      }
    ]
  },
  "dependencies": {
    "@pdf-lib/fontkit": "^1.1.1",
    "canvas": "^3.2.0",
    "chardet": "^2.1.0",
    "electron": "^38.3.0",
    "iconv-lite": "^0.7.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.4.296"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  }
}
